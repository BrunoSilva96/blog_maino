<div class="container mt-5">
  <div class="row align-items-center">
    <div class="col-md-4 mx-auto col-lg-5 mt-5">
      <div class="p-4 p-md-5 border rounded-3 bg-ligth">

      <h2>Fazer Login</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Conectar-se", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>