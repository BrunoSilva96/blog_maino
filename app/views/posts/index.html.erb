<div class="container mt-5">
  <div class="col-md-4 mx-auto col-lg-10">
    <div class="row align-items-cennter">
      <% if author_signed_in?%>
        <div class="col-md-6 p-md-4 offset-md-3 border rounded-3">
          <h4>O que você está pensando?</h4>
          <%= form_with model: @post, url: posts_path do |form|  %>
            <div class="input-group mb-3">
              <%= form.text_area :body, class: "form-control ", aria_describedby: "button-addon1" %>
            </div>
            <%= form.submit "Publicar", class: "btn btn-outline-primary mb-2", id: "button-addon1" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <% @posts.each do |post| %>
    <div class="card mt-5">
      <div class="card-header">Publicado por: <%= post.author.nickname %></div>
        <div class="card-body">
          <p class="card-text"><%= post.body %></p>
          <%= link_to 'Ver Comentarios', post %>
        </div>
      </div>
  <% end %>
</div>

<div class="pagination justify-content-center mt-5">
  <%= paginate @posts %>
</div>