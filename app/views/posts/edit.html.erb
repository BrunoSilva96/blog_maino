<div class="container mt-5">
  <div class="col-md-4 mx-auto col-lg-10">
    <div class="row align-items-cennter">
      <% if author_signed_in?%>
        <div class="col-md-6 p-md-4 offset-md-3 border rounded-3">
          <h4><%= t('models.what_do_you_want_to_change') %></h4>
          <%= form_with model: @post, url: post_path do |form|  %>
            <div class="input-group mb-3">
              <%= form.text_area :body, class: "form-control ", aria_describedby: "button-addon1" %>
            </div>
            <%= form.submit t('models.edit'),class: "btn btn-outline-success mb-2", id: "button-addon1" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>