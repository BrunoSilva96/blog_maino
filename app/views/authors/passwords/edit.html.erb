<div class="container mt-5">
  <div class="row align-items-center">
    <div class="col-md-4 mx-auto col-lg-4 mt-5">
      <div class="p-4 p-md-5 border rounded-3 bg-ligth">
        <h2><%= t('devise.mailer.reset_password_instructions.action') %></h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "authors/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="field">
            <%= f.label :password, t('devise.passwords.edit.new_password') %><br />
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> <%= t('models.min_password') %>)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, t('devise.passwords.edit.confirm_new_password') %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions">
            <%= f.submit t('devise.passwords.edit.change_my_password'), class:"btn btn-success mt-3" %>
          </div>
        <% end %>

        <%= render "authors/shared/links" %>
      </div>
    </div>
  </div>
</div>